# RAS Backtest Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# DATABASE CONNECTION
# =============================================================================
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
DATABASE_URL=< postgresql >://< username >:< password >@< host >:< port >/< db_name >

# =============================================================================
# BACKTEST CONFIGURATION (Optional - defaults shown)
# =============================================================================
# Start date for backtest (YYYY-MM-DD)
# BACKTEST_START_DATE=2010-01-14

# End date for backtest (YYYY-MM-DD)
# BACKTEST_END_DATE=2025-12-30

# Initial portfolio capital in dollars
# BACKTEST_INITIAL_CAPITAL=100000

# Transaction cost in basis points (10 = 0.1%)
# BACKTEST_TRANSACTION_COST_BPS=10

# Rebalancing frequency: daily, weekly, monthly, quarterly, annually
# BACKTEST_REBALANCE_FREQUENCY=monthly

# =============================================================================
# RAS CONFIGURATION (Optional - defaults shown)
# =============================================================================
# Confidence level (0.99 = 99% confidence)
# RAS_CONFIDENCE=0.99

# Number of Monte Carlo simulations for Rademacher complexity
# RAS_N_SIMULATIONS=20000

# Random seed for reproducibility
# RAS_RANDOM_SEED=42

# =============================================================================
# OUTPUT CONFIGURATION (Optional)
# =============================================================================
# Directory for output files (charts, reports)
# OUTPUT_DIR=results

# Set to 1 to skip chart generation
# NO_CHARTS=0
